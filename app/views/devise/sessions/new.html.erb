<div class="background">
  <div class="container">
    <div class="row margin-top-signin">
      <div class="signin-content col-md-4 col-xs-4 col-sm-12 col-xs-12 centered">
        <div class="row">
          <div class="col-md-7 signin-head-title centered" align="center">
            <p>Entrar no JCD'easy</p>
          </div>

          <div class="col-md-12 signin-form">

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>


              <div class="form-actions signin-btn">
                <%= f.button :submit, "Log in", class:"btn-primary btn-signin" %>
              </div>

            <% end %>
          </div>

          <div class="col-md-12 signin-footer" align="center">
            <p>Ainda n√£o tem uma conta?</p>
            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
