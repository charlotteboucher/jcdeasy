<div class="background">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-edit">
          <h4>Meu perfil :</h4>
          <%= link_to edit_user_registration_path, class:"edit-icon"  do%>
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          <% end %>
        </div>
        <div class="profile">
          <div class="row">
            <div class="col-md-6">
              <p class="title-profile">Nome:</p>
              <p class="title-profile-value"><%= @user.first_name + " " + @user.last_name %></p>
              <p class="title-profile">Telefone:</p>
              <p class="title-profile-value"><%= @user.phone_number %></p>

            </div>
            <div class="col-md-6">
              <p class="title-profile">CPF:</p>
              <p class="title-profile-value"><%= @user.cpf %></p>
              <p class="title-profile">Email:</p>
              <p class="title-profile-value"><%= @user.email %></p>
            </div>
          </div>
        </div>
      </div>
<!-- profile-info -->
        <div class="col-md-12">
          <div class="title-edit">
            <h4>Minhas Empresas:</h4>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".company-modal">Criar empresa</button>
          </div>
          <div class="profile">
            <ul class="company-list-ul">
              <% if @companies.empty? %>
                <em><h5>Você ainda não possui empresas registradas</h5></em>
              <% end %>
            <%= render 'users/companies' %>
            </ul>
          </div>
        </div>
        <div class="col-md-12">
          <div class="title-edit">
            <h4>Minhas Campanhas:</h4>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".campaign-modal">Criar campanha</button>
          </div>
          <div class="profile">
            <ul class="company-list-ul">
              <% if @campaigns.empty? %>
                <em><h5>Você ainda não possui campanhas</h5></em>
              <% end %>
              <%= render 'users/campaigns' %>
            </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<div class="modal fade company-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content background">
      <%= render template: "companies/new" %>
    </div>
  </div>
</div>

<div class="modal fade campaign-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content background">
      <%= render template: 'campaigns/new' %>
    </div>
  </div>
</div>

