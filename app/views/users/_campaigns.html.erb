<div class="row">
  <% @campaigns.each do |campaign| %>
      <li class="col-md-12 list-unstyled" >
        <%= link_to campaign_path(campaign) do%>
            <div class="compaign-wrap" data-campaign-id='<%= campaign.id %>'>
              <div class="row">
                <div class="col-md-8 compaign-info">
                  <p><%= campaign.title %> - <%= campaign.company.name %></p>
                </div>
                <div class="col-md-4 compaign-stats compaign-info">
                  <% if campaign.paid %>
                    <p align="center"><i class="fa fa-check-circle" aria-hidden="true"></i> Pagamento Aprovado</p>
                  <% else %>
                    <p align="center"><i class="fa fa-clock-o" aria-hidden="true"></i> Pagamento Pendente</p>
                  <% end %>
                  <% unless campaign.paid %>
                    <%= link_to  '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe,campaign_path(campaign), method: :delete, remote: true, data: { confirm_swal: "Are you sure?" } %>
                  <% end %>
                  </div>
              </div>
            </div>
          <% end %>
        </li>
  <% end %>
</div>
