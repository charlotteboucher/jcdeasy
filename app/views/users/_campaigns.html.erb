<div class="row">
  <% @campaigns.each do |campaign| %>
      <li class="col-md-12 list-unstyled" >
        <%= link_to campaign_path(campaign) do%>
            <div class="compaign-wrap" data-campaign-id='<%= campaign.id %>'>
              <div class="row">
                <div class="col-md-8 compaign-info">
                  <p><%= campaign.title %> - <%= campaign.company.name %></p>
                </div>
                <div class="col-md-4 compaign-info">
                  <div class="campaign-status">
                    <% if campaign.paid %>
                      <p class="btn-aprovado-pagamento" align="center">Pagamento Aprovado</p>
                    <% else %>
                      <p class="btn-pagamento-pendente" align="center">Pagamento Pendente</p>
                    <%= link_to campaign_path(campaign), method: :delete, remote: true, data: { confirm_swal: "Are you sure?" }, class: "campaign-icons" do %>
                      <i class="fa fa-trash" aria-hidden="true"></i>
                    <% end %>
                    <% end %>
                  </div>
                  </div>
              </div>
            </div>
          <% end %>
        </li>
  <% end %>
</div>
